<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RESTClientApp.KategoriPage" Title="List Kategori">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding ListKategori}" x:Name="listView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding NamaKategori}" Detail="{Binding KategoriID}" 
                              TextColor="Red" DetailColor="Green" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>